<h1>Editing: {{user.name}}</h1>
<form action="/users/update" class="form" method="post">
  <input type="hidden" name="id" value="{{user.id}}" />
  <div class="form-control">
    <label for="name">Name:</label>
    <input
      type="text"
      name="name"
      placeholder="Enter the user name"
      value="{{user.name}}"
    />
  </div>

  <div class="form-control">
    <label for="Occupation">Occupation:</label>
    <input
      type="text"
      name="occupation"
      placeholder="Enter the occupation"
      value="{{user.occupation}}"
    />
  </div>

  <div class="form-control form-checkbox">
    {{#if user.newsletter}}
      <input type="checkbox" name="newsletter" checked />
    {{else}}
      <input type="checkbox" name="newsletter" />
    {{/if}}
    <label for="newsletter">Send promotions?</label>
  </div>

  <input type="submit" value="Edit" />
</form>
<div class="address-container">
  <h2>Addresses:</h2>
  <form action="/address/create" method="post">
    <input type="hidden" name="userId" value="{{user.id}}" />
    <div class="form-control">
      <label for="street">Street:</label>
      <input type="text" name="street" placeholder="Enter the street" />
    </div>
    <div class="form-control">
      <label for="number">Number:</label>
      <input
        type="text"
        name="number"
        placeholder="Enter the number of the residence"
      />
    </div>
    <div class="form-control">
      <label for="street">City:</label>
      <input type="text" name="city" placeholder="Enter the city" />
    </div>
    <input type="submit" value="Include address" />
    <div class="address-list">
      <h2>Address list:</h2>
      {{#each user.addresses}}
        <p>#{{this.id}} - {{this.street}} - {{this.number}} - {{this.city}}</p>
      {{/each}}
    </div>
  </form>
</div>
