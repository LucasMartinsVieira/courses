<h1>Registered users</h1>
<div class="container">
  {{#each users}}
    <div class="item">
      <h2>{{this.name}}</h2>
      <p>{{this.occupation}}</p>
      <div class="actions">
        <a href="/users/{{this.id}}">See details</a>
        <form
          action="/users/delete/{{this.id}}"
          class="details-btn"
          method="post"
        >
          <input type="submit" class="delete-btn" value="Delete" />
        </form>
      </div>
    </div>
  {{/each}}
</div>
